<h1>Editando usuario</h1>

<% form_for(@usuario) do |f| %>
	<% if @usuario.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@usuario.errors.count, "error") %></h2>
			<ul>
			<% @usuario.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :nombre %><br>
		<%= f.text_field :nombre %>
	</div>
	<div> class="actions"><%= f.submit "guardar cambios" %>
	</div>
<% end %>

<%= link_to "Atras", users_path %>