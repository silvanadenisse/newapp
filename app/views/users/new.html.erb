<h1>Registrar</h1>

<% form_for(@usuario) do |f| %>
	<% if @usuario.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@usuario.errors.count, "error") %></h2>
			<ul>
			<% @usuario.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>


	<div class="field">
		<%= f.label :nombre %><br>
		<%= f.text_field :nombre %>
	</div>
	<div class="field">
		<%= f.label :email %><br>
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :password %><br>
		<%= f.text_field :password %>
	</div>
	<div class="field">
		<%= f.label :password_confirmation %><br>
		<%= f.text_field :password_confirmation %>
	</div>
	<div> class="actions"><%= f.submit "Crear mi cuenta" %>
	</div>
<% end %>